{
  "description": "Uses ubuntu 16.04 iso, installs rke, and launches a flask application and creates an ovf image. username, fullname and password are also set in http/preseed.cfg",
  "variables": {
    "hostname": "ubuntuvm",
    "fullname": "user1",
    "username": "user1",
    "password": "pass1",
    "disk_size": "20480",
    "rke_version": "v0.2.0",
    "kubectl_version":"v1.14.0"
  },
  "builders": [{
    "format":"ova",
    "headless": true,
    "type": "virtualbox-iso",
    "iso_checksum_type": "sha256",
    "iso_checksum_url": "http://releases.ubuntu.com/16.04/SHA256SUMS",
    "iso_urls": [
      "ubuntu-16.04.6-server-amd64.iso",
      "http://releases.ubuntu.com/16.04/ubuntu-16.04.6-server-amd64.iso"
    ],
    "boot_wait": "10s",
    "http_directory": "http",
    "disk_size": "{{user `disk_size`}}",
    "vm_name": "packer-ubuntu-16.04-amd64",
    "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown -P now",
    "guest_os_type": "Ubuntu_64",
    "boot_command": [
      "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
      "/install/vmlinuz<wait>",
      " auto<wait>",
      " console-setup/ask_detect=false<wait>",
      " console-setup/layoutcode=us<wait>",
      " console-setup/modelcode=pc105<wait>",
      " debconf/frontend=noninteractive<wait>",
      " debian-installer=en_US<wait>",
      " fb=false<wait>",
      " initrd=/install/initrd.gz<wait>",
      " kbd-chooser/method=us<wait>",
      " keyboard-configuration/layout=USA<wait>",
      " keyboard-configuration/variant=USA<wait>",
      " locale=en_US<wait>",
      " netcfg/get_domain=vm<wait>",
      " netcfg/get_hostname={{user `hostname`}}<wait>",
      " grub-installer/bootdev=/dev/sda<wait>",
      " noapic<wait>",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
      " -- <wait>",
      "<enter><wait>"
    ],
    "vboxmanage": [
      [
        "modifyvm",
        "{{.Name}}",
        "--memory",
        "3072"
      ],
      [
        "modifyvm",
        "{{.Name}}",
        "--cpus",
        "4"
      ]
    ],

    "communicator": "ssh",
    "ssh_username": "{{user `username`}}",
    "ssh_password": "{{user `password`}}",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s"
  }],
  "provisioners": [{
    "type": "ansible",
    "playbook_file": "ansible/playbook.yaml",
    "user": "user1",
    "extra_arguments": ["--extra-vars", "ansible_become_pass={{user `password`}} ssh_username={{user `username`}} rke_version={{user `rke_version`}} kubectl_version={{user `kubectl_version`}}"]
  }]
}